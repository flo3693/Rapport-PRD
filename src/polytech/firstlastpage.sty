\newcommand{\makelastpage}{
	% add up to 3 pages to round total page count to *4
	\ifnumcomp{\theCurrentPage - (\theCurrentPage / 4 ) * 4}{=}{0}{}{}
	\ifnumcomp{\theCurrentPage - (\theCurrentPage / 4 ) * 4}{=}{1}{\newpage\mbox{ }}{}
	\ifnumcomp{\theCurrentPage - (\theCurrentPage / 4 ) * 4}{=}{2}{\newpage\mbox{ }\newpage\mbox{ }}{}
	\ifnumcomp{\theCurrentPage - (\theCurrentPage / 4 ) * 4}{=}{3}{\newpage\mbox{ }\newpage\mbox{ }\newpage\mbox{ }}{}
	\backmatter
	%\polytech@output@weeklyreports
	\newpage
	\thispagestyle{empty}
	\begin{center}
		{\polytech@font@titlepage@title\polytech@output@title}
		\ifcsdef{polytech@output@subtitle}{
			\par\vspace{0.5cm}{\polytech@font@titlepage@subtitle\polytech@output@subtitle}\vspace{0.5cm}
		}\par
	\end{center}
	\vfill
	\textbf{Résumé}\par
	\polytech@output@resume\par
	\textbf{Mots-clés}\par
	\polytech@output@motcles\par
	\vfill
	\textbf{Abstract}\par
	\polytech@output@abstract\par
	\textbf{Keywords}\par
	\polytech@output@keywords\par\vspace{0.5cm}
	\vfill
	\polytech@output@contributors
}








