    % header/footer
    \DeclareFixedFont{\polytech@header@font}{\encodingdefault}{cmr}{b}{n}{10pt}
    \DeclareFixedFont{\polytech@footer@font}{\encodingdefault}{cmr}{b}{n}{10pt}

    \pagestyle{fancy}

    \fancyhf{} % clear all header and footer fields
    \fancyhead[RO,LE]{\polytech@header@font\leftmark}
    \fancyfoot[LE,RO]{\polytech@footer@font\thepage}

    \renewcommand{\headrulewidth}{0pt}
    \renewcommand{\footrulewidth}{0pt}

    \fancypagestyle{plain}{%
      \fancyhf{} % clear all header and footer fields
      \fancyfoot[LE,RO]{\polytech@footer@font\thepage}
    }

    \renewcommand{\chaptermark}[1]{\markboth{\thechapter\ #1}{}}


